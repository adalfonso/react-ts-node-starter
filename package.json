{
  "name": "react-ts-node-starter",
  "version": "0.0.0",
  "description": "",
  "author": "Anthony Dalfonso <anthonyjdalfonso@gmail.com>",
  "keywords": [
    "docker",
    "eslint",
    "hmr",
    "jest",
    "mongodb",
    "node",
    "nyc",
    "prettier",
    "react",
    "sass",
    "typescript",
    "webpack"
  ],
  "scripts": {
    "build": "npm run clean-dist && npm run build:client && npm run build:server",
    "build:client": "webpack --config=configs/webpack/client-prod.config.js",
    "build:dev": "npm run clean-dist && webpack --config configs/webpack/server-dev.config.js",
    "build:dev-watch": "webpack --watch --config configs/webpack/server-dev.config.js",
    "build:server": "webpack --config=configs/webpack/server-prod.config.js",
    "clean-dist": "rimraf dist/*",
    "docker": "docker-compose up -d",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "lint": "eslint ./{server,client}/**/*.{js,ts,tsx} --quiet",
    "start": "npm run build && pm2 start dist/server/index.js",
    "start:dev": "npm run build:dev && concurrently \"npm run build:dev-watch\" \"nodemon dist/server/index\"",
    "start:pm2-runtime": "npm run build && pm2-runtime dist/server/index.js",
    "test": "jest --coverage --watchAll --config=configs/jest.json"
  },
  "dependencies": {
    "axios": "^0.26.1",
    "express": "^4.17.3",
    "mongodb": "^4.5.0",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.9",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "babel-loader": "^8.2.4",
    "concurrently": "^7.1.0",
    "core-js": "^3.21.1",
    "css-loader": "^6.7.1",
    "dotenv": "^16.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "image-webpack-loader": "^8.1.0",
    "jest": "^27.5.1",
    "node-sass": "^7.0.1",
    "nodemon": "^2.0.15",
    "pm2": "^5.2.0",
    "prettier": "^2.6.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "regenerator-runtime": "^0.13.9",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "typescript": "^4.6.3",
    "webpack": "^5.72.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-middleware": "^5.3.1",
    "webpack-hot-middleware": "^2.25.1",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
