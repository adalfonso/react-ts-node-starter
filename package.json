{
  "name": "react-typescript-node-webpack-hmr-starter",
  "version": "0.0.0",
  "description": "",
  "author": "Anthony Dalfonso <anthonyjdalfonso@gmail.com>",
  "scripts": {
    "build": "npm run clean-dist && npm run build:client && npm run build:server",
    "build:client": "webpack --config=configs/webpack/client-prod.config.js",
    "build:dev": "npm run clean-dist && webpack --config configs/webpack/server-dev.config.js",
    "build:hot": "webpack --watch --config configs/webpack/server-dev.config.js",
    "build:server": "webpack --config=configs/webpack/server-prod.config.js",
    "check": "npm run lint && npm run test",
    "clean-dist": "rimraf dist/*",
    "lint": "eslint ./{server,client}/**/*.{js,ts,tsx} --quiet",
    "start": "npm run build && pm2 start dist/server/index.js",
    "start:docker": "npm run build && pm2-runtime dist/server/index.js",
    "start:dev": "npm run build:dev && concurrently \"npm run build:hot\" \"nodemon dist/server/index\"",
    "test": "jest --coverage --watchAll --config=configs/jest.json"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "express": "^4.17.1",
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.8",
    "@babel/core": "^7.14.8",
    "@babel/preset-env": "^7.14.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.14.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.1",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.1",
    "css-loader": "^6.2.0",
    "dotenv": "^10.0.0",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.2",
    "image-webpack-loader": "^7.0.1",
    "jest": "^27.0.6",
    "node-sass": "^6.0.1",
    "nodemon": "^2.0.12",
    "pm2": "^5.1.1",
    "prettier": "^2.3.2",
    "react-dom": "^17.0.2",
    "react-hot-loader": "^4.13.0",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.1.0",
    "style-loader": "^3.2.1",
    "typescript": "^4.3.5",
    "webpack": "^5.51.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-middleware": "^5.0.0",
    "webpack-hot-middleware": "^2.25.0",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
